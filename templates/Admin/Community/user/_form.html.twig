{{ form_start(form) }}
{{ form_widget(form._token) }}
{% if not form.vars.valid %}
  <div class="alert alert-danger">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
    <span>
      <strong>{{ form_errors(form) }}</strong>
    </span>
  </div>
{% endif %}

<!-- Card -->
<div class="card">

  <!-- Card body -->
  <div class="card-body">

    <!-- Material form register -->
    <form>
      <div class="row">
        <div class="col-sm-12">
          {% if new is defined %}
            <h1 class="h4 text-center py-4">{{ "New User"|trans }}</h1>
          {% else %}
            <h1 class="h4 text-center py-4">{{ "Edit User"|trans }}</h1>
          {% endif %}
        </div>
        <div class="col-md-6">
          <!-- Material input text -->
          <div class="md-form">
            <i class="fa fa-user prefix grey-text"></i>
            {{ form_errors(form.username) }}
            {{ form_widget(form.username, {'attr': {'id': 'materialFormCardName1', 'name': 'username', 'class': 'form-control', 'aria-label': 'Large', 'aria-describedby': 'inputGroup-sizing-sm' }}) }}
            <label for="materialFormCardNameEx" class="font-weight-light">Username</label>
          </div>
          {% if new is defined %}
            <!-- Material input password -->
            <div class="md-form">
              <i class="fa fa-lock prefix grey-text"></i>
              {{ form_errors(form.password) }}
              {{ form_widget(form.password, {'attr': {'id': 'materialFormCardPasswordEx', 'name': 'password', 'class': 'form-control', 'aria-label': 'Large', 'aria-describedby': 'inputGroup-sizing-sm' }}) }}
              <label for="materialFormCardPasswordEx" class="font-weight-light">{{ "Password"|trans }}</label>
            </div>
          {% endif %}
          <div class="md-form">
            <i class="fa fa-user prefix grey-text"></i>
            {{ form_errors(form.firstName) }}
            {{ form_widget(form.firstName, {'attr': {'id': 'materialFormCardName2', 'name': 'firstName', 'class': 'form-control', 'aria-label': 'Large', 'aria-describedby': 'inputGroup-sizing-sm' }}) }}
            <label for="materialFormCardNameEx" class="font-weight-light">Fistname</label>
          </div>
          <div class="md-form">
            <i class="fa fa-user prefix grey-text"></i>
            {{ form_errors(form.lastName) }}
            {{ form_widget(form.lastName, {'attr': {'id': 'materialFormCardName3', 'name': 'lastName', 'class': 'form-control', 'aria-label': 'Large', 'aria-describedby': 'inputGroup-sizing-sm' }}) }}
            <label for="materialFormCardNameEx" class="font-weight-light">{{ "Lastname"|trans }}</label>
          </div>
          <!-- Material input email -->
          <div class="md-form">
            <i class="fa fa-envelope prefix grey-text"></i>
            {{ form_errors(form.email) }}
            {{ form_widget(form.email, {'attr': {'id': 'materialFormCardEmailEx', 'type': 'email', 'email': 'username', 'class': 'form-control', 'aria-label': 'Large', 'aria-describedby': 'inputGroup-sizing-sm' }}) }}
            <label for="materialFormCardEmailEx" class="font-weight-light">{{ "Email"|trans }}</label>
          </div>
          <div class="md-form">
            <i class="fa fa-phone prefix grey-text"></i>
            {{ form_errors(form.phone) }}
            {{ form_widget(form.phone, {'attr': {'id': 'materialFormCardName3', 'name': 'phone', 'class': 'form-control', 'aria-label': 'Large', 'aria-describedby': 'inputGroup-sizing-sm' }}) }}
            <label for="materialFormCardNameEx" class="font-weight-light">{{ "Phone"|trans }}</label>
          </div>
        </div>
        <div class="col-md-6 p-5">
          <div class="md-form  p-1  m-1 center">
            <label class="form-check-label p-2" for="team">{{ "Team"|trans }}</label>
            {{ form_errors(form.team) }}
            {{ form_widget(form.team, {'attr': {'id': 'team', 'name': 'team', 'class': 'p-3 m-1', 'aria-label': 'Large'}}) }}
          </div>
          <div class="form-check checkbox-success-filled-in p-1  m-1 center">
            <label class="form-check-label p-2" for="roles">{{ "Roles"|trans }}</label>
            {{ form_errors(form.roles) }}
            {{ form_widget(form.roles, {'attr': {'id': 'roles', 'name': 'role', 'checked': '', 'class': 'form-control p-3 m-1', 'aria-label': 'Large', 'aria-describedby': 'inputGroup-sizing-md' }}) }}
          </div>
          <div class="center p-4">
            <label class="btn btn-success">
              {{ form_widget(form.enabled, {'attr': {'id': 'enabled', 'name': 'enabled','autocomplete': 'off', 'class': 'filled-in form-check-input', 'aria-label': 'Large', 'aria-describedby': 'inputGroup-sizing-sm' }}) }}
              {{ "Enabled"|trans }}
            </label>
            <label class="btn btn-warning">
              {{ form_widget(form.restricted, {'attr': {'id': 'restricted', 'name': 'restricted','autocomplete': 'off', 'class': 'filled-in form-check-input', 'aria-label': 'Large', 'aria-describedby': 'inputGroup-sizing-sm' }}) }}
              {{ "Restricted"|trans }}
            </label>
          </div>
        </div>

        {{ form_rest(form) }}

        <div class="text-center py-4 mt-3">
          <button class="btn btn-green center" type="submit">{{ button_label|default('Save') }}</button>
        </div>
      </div>
    </form>
    <!-- Material form register -->

  </div>
  <!-- Card body -->

</div>
<!-- Card -->
{{ form_end(form) }}
