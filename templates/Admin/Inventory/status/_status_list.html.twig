<div class="container white">
  <div class="row">
    <div id="status-list" class="searchable-container row">
      {% for status in statuses %}
        <div id="heading-status-{{ status.id }}" class="items col-md-6 clearfix center">
          <div class="info-block block-info clearfix row">
            <div class="col-sm-12 col-md-4 center">
              <div class="center p-1  bg-{{ status.statusType }} text-white ">
                <span class="fas fa-info fa-lg"></span>
                <h5 class="fs-14 bold center text-uppercase">{{ status.statusName }}</h5>
              </div>
            </div>
            <div class="col-sm-12 col-md-5">
              <div class="row">
                <div class="col-sm-12 col-md-6 p-0">
                  <i class="fas fa-info-circle m-1"></i>
                  <h6 class="title bold center text-uppercase">{{ status.statusType }}</h6>
                </div>
                <div class="border-left col-sm-12 col-md-6 center p-0">
                  <i class="fab fa-stack-overflow m-1"></i>
                  <h6 class="title bold center text-uppercase">{{ status.stock.stockName }}</h6>
                </div>
              </div>
            </div>
            <div class="col-sm-12 col-md-3 center">
              <a class="float-right p-1 btn btn-floating btn-outline-success btn-sm mt-0 " href="{{ path('status_show', {'id': status.id}) }}">
                {{ "Show"|trans }}
              </a>
              {% if is_granted("ROLE_ADMIN") %}
                <a class="float-right p-1 btn btn-floating btn-outline-info btn-sm mt-0" href="{{ path('status_edit', {'id': status.id}) }}">
                  {{ "Edit"|trans }}
                </a>
              {% endif %}
            </div>
            <div class="col-sm-12 col-md-12">
              <div class="shadowed-2 row d-flex justify-content-center">
                <div class="center col-sm-12 col-md-2">
                  {% if status.enabled == true %}
                    <span class="text-uppercase badge badge-success badge-md m-0">{{ "Enabled"|trans }}</span>
                  {% else %}
                    <span class="text-uppercase badge badge-danger badge-md m-0">{{ "Disabled"|trans }}</span>
                  {% endif %}
                </div>
                <div class="col-sm-12 col-md-5 float-left media-meta">
                  <i class="p-1 fas fa-calendar"></i>{{ "Created at"|trans }}
                  :
                  {{ status.createdAt ? status.createdAt|date('Y-m-d H:i:s') : '' }}
                </div>
                <div class="col-sm-12 col-md-5 m-left-5 float-left  media-meta">
                  <i class="p-1 fas fa-calendar"></i>{{ "Updated at"|trans }}
                  :
                  {{ status.updatedAt ? status.updatedAt|date('Y-m-d H:i:s') : '' }}
                </div>
              </div>
            </div>
          </div>
        </div>
      {% else %}
        <div>
          <h3 class="center title">{{ "No Status found"|trans }}</h3>
        </div>
      {% endfor %}
    </div>
  </div>
</div>
<caption>{{ "List of Status"|trans }}</caption>
