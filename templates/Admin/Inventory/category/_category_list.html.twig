<div class="container white">
  <div class="row">
    <div id="categories_list" class="searchable-container row">
      {% for category in categories %}
        <div id="heading-cat-{{ category.id }}" class="items col-md-12 clearfix center">
          <div class="info-block block-info clearfix row">
            <div class="col-sm-12 col-md-3 center">
              <div class="center">
                <span class="square-box fas fa-sitemap fa-2x"></span>
              </div>
              <div class="center">
                {% if category.enabled == true %}
                  <span class="fs-60-pc badge badge-success badge-sm">{{ "Enabled"|trans }}</span>
                {% else %}
                  <span class="fs-60-pc badge badge-danger badge-sm">{{ "Disabled"|trans }}</span>
                {% endif %}
              </div>
            </div>
            <div class="col-sm-12 col-md-6">
              <div class="row">
                <div class="col-md-9">
                  <h5 class="center">{{ category.categoryName }}</h5>
                  {% if category.categoryDescription | length > 50 %}
                    <h4 class="fs-12 float-left title m-1">
                      <i class="fas fa-info-circle m-1"></i>{{ category.categoryDescription|truncate(50) }}
                    </h4>
                  {% else %}
                    <h4 class="fs-12 float-left title m-1">
                      <i class="fas fa-info-circle m-1"></i>{{ category.categoryDescription }}
                    </h4>
                  {% endif %}
                </div>
                <div class="col-md-3 ">
                  <button class="mt-3 fs-60-pc center btn btn-link btn-outline-dark p-1" data-toggle="collapse" data-target="#collapse-cat-{{ category.id }}" aria-expanded="false" aria-controls="collapse-cat-{{ category.id }}">
                    {{ "Sub-Categories"|trans}}
                  </button>
                </div>
              </div>
            </div>
            <div class="col-sm-12 col-md-3 center pt-4">
              <a class="btn-floating btn-success btn-sm " href="{{ path('category_show', {'id': category.id}) }}">
                <i class="fas fa-eye fa-lg"></i>
              </a>
              {% if is_granted("ROLE_ADMIN") %}
                <a class="btn-floating btn-info btn-sm m-0" href="{{ path('category_edit', {'id': category.id}) }}">
                  <i class="fas fa-edit fa-lg"></i>
                </a>
              {% endif %}
            </div>
            <div class="col-sm-12 col-md-12">
              <div class="shadowed-2 row d-flex justify-content-center">
                <div class="col-sm-12 col-md-6 float-left media-meta">
                  <i class="p-1 fas fa-calendar"></i>{{ "Created at"|trans }}
                  :
                  {{ category.CreatedAt ? category.CreatedAt|date('Y-m-d H:i:s') : '' }}
                </div>
                <div class="col-sm-12 col-md-6 m-left-5 float-left  media-meta">
                  <i class="p-1 fas fa-calendar"></i>{{ "Updated at"|trans }}
                  :
                  {{ category.UpdatedAt ? category.UpdatedAt|date('Y-m-d H:i:s') : '' }}
                </div>
              </div>
            </div>
            <div id="collapse-cat-{{ category.id }}" class="collapse subItemsBlock" aria-labelledby="heading-cat-{{ category.id }}" data-parent="#categories_list">
              <div class="">
                <div id="subCategories-cat-{{ category.id }}" class="searchable-container tab-pane">
                  <p class="fs-14 float-left text-uppercase">{{ "Sub-Categories"|trans}}</p>
                  {% for sub_category in category.subCategories %}
                    <div id="heading-cat-{{ sub_category.id }}" class="items col-md-10 float-right clearfix center">
                      <div class="info-block block-info clearfix row">
                        <div class="col-sm-12 col-md-3 center">
                          <div class="center">
                            <h5 class="fs-14 bold center">{{ sub_category.subEntityName }}</h5>
                            {% if sub_category.enabled == true %}
                              <span class="fs-60-pc badge badge-success badge-sm">{{ "Enabled"|trans }}</span>
                            {% else %}
                              <span class="fs-60-pc badge badge-danger badge-sm">{{ "Disabled"|trans }}</span>
                            {% endif %}
                          </div>
                        </div>
                        <div class="col-sm-12 col-md-6">
                          <div class="row">
                            <div class="col-md-9">
                              {% if sub_category.subCategoryDescription | length > 50 %}
                                <h4 class="fs-12 float-left title m-1">
                                  <i class="fas fa-info-circle m-1"></i>{{ sub_category.subCategoryDescription|truncate(50) }}
                                </h4>
                              {% else %}
                                <h4 class="fs-12 float-left title m-1">
                                  <i class="fas fa-info-circle m-1"></i>{{ sub_category.subCategoryDescription }}
                                </h4>
                              {% endif %}
                            </div>
                          </div>
                        </div>
                        <div class="col-sm-12 col-md-3 center pt-4">
                          <a class="btn-floating btn-success btn-sm " href="{{ path('sub_category_show', {'id': sub_category.id}) }}">
                            <i class="fas fa-eye fa-lg"></i>
                          </a>
                          {% if is_granted("ROLE_ADMIN") %}
                            <a class="btn-floating btn-info btn-sm m-0" href="{{ path('sub_category_edit', {'id': sub_category.id}) }}">
                              <i class="fas fa-edit fa-lg"></i>
                            </a>
                          {% endif %}
                        </div>
                        <div class="col-sm-12 col-md-12">
                          <div class="shadowed-2 row d-flex justify-content-center">
                            <div class="col-sm-12 col-md-6 float-left media-meta">
                              <i class="p-1 fas fa-calendar"></i>{{ "Created at"|trans }}
                              :
                              {{ sub_category.CreatedAt ? sub_category.CreatedAt|date('Y-m-d H:i:s') : '' }}
                            </div>
                            <div class="col-sm-12 col-md-6 m-left-5 float-left  media-meta">
                              <i class="p-1 fas fa-calendar"></i>{{ "Updated at"|trans }}
                              :
                              {{ sub_category.UpdatedAt ? sub_category.UpdatedAt|date('Y-m-d H:i:s') : '' }}
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  {% else %}
                    <div>
                      <h1>{{ "No Sub -Category found"|trans }}</h1>
                    </div>
                  {% endfor %}
                </div>

              </div>
            </div>
          </div>
        </div>
      {% else %}
        <div>
          <h1>{{ "No Category found"|trans }}</h1>
        </div>
      {% endfor %}
    </div>
  </div>
</div>
