{% extends 'base.html.twig' %}

{% block title %}SubCategory index{% endblock %}

{% block content %}
    <h1>SubCategory index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>SubEntityName</th>
                <th>SubCategoryDescription</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>Enabled</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for sub_category in sub_categories %}
            <tr>
                <td>{{ sub_category.id }}</td>
                <td>{{ sub_category.subEntityName }}</td>
                <td>{{ sub_category.subCategoryDescription }}</td>
                <td>{{ sub_category.createdAt ? sub_category.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ sub_category.updatedAt ? sub_category.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ sub_category.enabled ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('sub_category_show', {'id': sub_category.id}) }}">show</a>
                    <a href="{{ path('sub_category_edit', {'id': sub_category.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('sub_category_new') }}">Create new</a>
{% endblock %}
