<form method="post" action="{{ path('sub_item_delete', {'id': sub_item.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ sub_item.id) }}">
    <button class="btn btn-danger btn-md">{{ "Delete"|trans }}</button>
</form>
